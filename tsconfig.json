{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2017",
    "module": "ES2022",
    "lib": ["dom", "ES2021"],
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@": ["src"],
      "@module": ["src/lib/module"],
      "@utils": ["src/lib/utils"],
      "@themes": ["src/themes"],
    },
  },
}
